@model FairyTale
@{
    var fairyTale = Model;

    var parent = fairyTale.Parent;
    var previous = fairyTale.Previous;
    var next = fairyTale.Next;
}

<footer>
    <nav>
        <ul class="h-nav clearfix">
            <li>
                <i class="fa fa-arrow-left"></i>
                @Html.ActionLink(previous)
            </li>

            <li>
                <i class="fa fa-list"></i>
                @Html.Parent(parent)
            </li>

            <li>
                @Html.ActionLink(next)
                <i class="fa fa-arrow-right"></i>
            </li>
        </ul>
    </nav>
</footer>