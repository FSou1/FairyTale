@model IList<FairyTale>

@{
    var related = Model;
}

<article class="padding_20 top_dashed bottom_dashed">
    <header>
        <h3>Читать похожие сказки:</h3>
    </header>

    <ul>
        @foreach (var ft in related) {
            <li>
                @Html.ActionLink(ft)
            </li>
        }
    </ul>
</article>