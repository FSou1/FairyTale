<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/reset.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />
</head>
<body>

<header class="clearfix">
    <a class="logo" href="@Url.Action("Index", "Home")">
        <img src="@Url.Content("~/Content/images/logo.gif")" width="163" height="40" alt="logo">
    </a>
</header>

<section class="search">
    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "clearfix" })) {
        <input type="text" name="term" class="search_input" placeholder="Поиск по сайту.." />
        <button class="search_button" type="submit">Искать</button>
    }
</section>

<main>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Html.Partial("YandexMetrika")
</main>

<footer>
    © vskazki.ru 2011-@DateTime.Now.Year
</footer>
</body>
</html>