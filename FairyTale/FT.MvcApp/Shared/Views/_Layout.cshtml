@model LayoutViewModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <meta content="@Model.Description" name="description"  />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/reset.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/pager.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />
</head>
<body>

<header class="clearfix">
    <a href="/" class="logo" title="На главную страницу">
        <img src="@Url.Content("~/Content/images/logo.gif")" width="163" height="40" alt="logo">
    </a>

    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "search" })) {
        <input type="text" name="term" class="search_text" placeholder="Поиск по сайту.." />
        <input type="submit" class="search_submit" value="Искать" />
    }
</header>

<div class="container">
    @RenderBody()

    @Html.Partial("YandexMetrika")
</div>

<footer>
    <nav class="clearfix">
        <dl>
            <dt>Разделы</dt>
            <dd>@Html.ActionLink("Теги", "Index", "Tags")</dd>
        </dl>
        
        <dl>
            <dt>Инфо</dt>
            <dd>@Html.ActionLink("О сайте", "About", "Home")</dd>
        </dl>
    </nav>
</footer>

</body>
</html>