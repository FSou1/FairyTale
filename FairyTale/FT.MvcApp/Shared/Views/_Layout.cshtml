<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />
</head>
<body>
    <header>
        <a class="logo" href="@Url.Action("Index", "Home")">
            <img src="@Url.Content("~/Content/images/logo.gif")" width="163" height="40" alt="logo">
        </a>

        <div class="search">
            @using (Html.BeginForm("Search", "Home", FormMethod.Get)) {
                <input type="text" name="term" placeholder="Поиск по сайту.." />
            }
        </div>
    </header>

    <nav>
        @Html.ActionLink("О сайте", "About", "Home")
    </nav>

    <main>
        <div class="container body-content">
            @RenderBody()
        </div>
    </main>

    <footer>
        © vskazki.ru 2011-@DateTime.Now.Year
    </footer>
</body>
</html>