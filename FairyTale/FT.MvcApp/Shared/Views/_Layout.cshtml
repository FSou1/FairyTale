<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/reset.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/pager.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/site.css")" />
</head>
<body>

<header>
    <a href="@Url.Action("Index", "Home")">
        <img src="@Url.Content("~/Content/images/logo.gif")" width="163" height="40" alt="logo">
    </a>

    <section>
        @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "clearfix" })) {
            <input type="text" name="term" placeholder="Поиск по сайту.." />
            <button type="submit">Искать</button>
        }
    </section>
</header>

<div class="container">
    @RenderBody()

    @Html.Partial("YandexMetrika")
</div>

    <footer>
        © vskazki.ru 2011-@DateTime.Now.Year
    </footer>

</body>
</html>